<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AulaInvertida.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AulaInvertida"
    xmlns:view="clr-namespace:AulaInvertida.View"
    Shell.FlyoutBehavior="Disabled"
    Title="AulaInvertida">

    <TabBar>
        <ShellContent
            Title="Configuração"
            ContentTemplate="{DataTemplate view:Configuracao}"
            Route="View.Configuracao" />
        <ShellContent
            Title="Horários"
            ContentTemplate="{DataTemplate view:Horarios}"
            Route="View.Horarios" />
    </TabBar>

</Shell>
