<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AulaInvertida.View.Reutilizar.Cabecalho">
    <VerticalStackLayout>
        <Grid BackgroundColor="White" ColumnDefinitions="*,*,*" Padding="10">
            <Image Source="cps.png" Grid.Column="0" HorizontalOptions="Start" WidthRequest="100" />
            <Image Source="logofatec.png" Grid.Column="1" HorizontalOptions="Center" WidthRequest="100" />
            <Image Source="sp.png" Grid.Column="2" HorizontalOptions="End" WidthRequest="100" />
        </Grid>
        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="10" />
    </VerticalStackLayout>
</ContentView>